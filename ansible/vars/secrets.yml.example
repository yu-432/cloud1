---
# このファイルをコピーして secrets.yml を作成してください:
#   cp ansible/vars/secrets.yml.example ansible/vars/secrets.yml
# または:
#   make setup

# サーバー設定
server_name: "{{ ec2_public_ip }}" # EC2のIPアドレスが自動で入る

# データベースパスワード
mysql_password: "your_secure_mysql_password_here"
mysql_root_password: "your_secure_root_password_here"
wordpress_db_password: "your_secure_mysql_password_here" # mysql_password と同じ値

# WordPress管理者パスワード
wordpress_admin_password: "your_secure_admin_password_here"
wordpress_editor_password: "your_secure_editor_password_here"

# WordPress設定
wordpress_title: "Cloud-1 WordPress"
wordpress_admin_user: "admin"
wordpress_admin_email: "admin@example.com"
wordpress_editor_user: "editor"
wordpress_editor_email: "editor@example.com"
