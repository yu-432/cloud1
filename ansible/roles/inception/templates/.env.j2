# Cloud-1 用の環境変数ファイル（非機密情報のみ）
# パスワードは Docker secrets で管理される（/run/secrets/）

DOMAIN_NAME={{ server_name }}

# WordPress データベース接続
WORDPRESS_DB_HOST=mariadb:3306
WORDPRESS_DB_NAME=wordpress_db
WORDPRESS_DB_USER=wordpress_user
WORDPRESS_DB_TITLE={{ wordpress_title | default("Cloud-1 WordPress") }}

# WordPress 管理者アカウント
WORDPRESS_ADMIN_USER={{ wordpress_admin_user | default("admin") }}
WORDPRESS_ADMIN_EMAIL={{ wordpress_admin_email | default("admin@example.com") }}

# WordPress 編集者アカウント
WORDPRESS_EDITOR_USER={{ wordpress_editor_user | default("editor") }}
WORDPRESS_EDITOR_EMAIL={{ wordpress_editor_email | default("editor@example.com") }}
